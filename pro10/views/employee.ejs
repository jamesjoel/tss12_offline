
<%- include('header') %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12">
                <button data-target="#addModal" data-toggle="modal" class="btn btn-primary">Add Employee</button>
                <a href="/deleteall" class="btn btn-danger">Delete All</a>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-8 offset-md-2">
                <table class="table table-dark table-bordered">
                    <tr>
                        <th>S.No.</th>
                        <th>Full Name</th>
                        
                        <th>City</th>
                        
                        <th>View</th>
                        <th>Edit</th>
                        <th>Delete</th>

                    </tr>
                    <% result.forEach(function(x, n){ %>
                        <tr>
                            <td><%= n+1 %></td>
                            <td><%= x.full_name %></td>
                            
                            <td><%= x.city %></td>
                            
                            <td><a href="/view/<%= x._id %>" class="btn btn-warning btn-sm"><i class="fa fa-eye" aria-hidden="true"></i></a></td>
                            <td><a href="#" class="btn btn-info btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                            <td><a href="/delete/<%= x._id %>" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a></td>
                        </tr>
                    <% }) %>


                </table>
            </div>
        </div>

    </div>
