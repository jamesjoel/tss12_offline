<%- include('header') %>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/update/<%= result._id %>" method="post">
            <div class="card">
                <div class="card-header">
                    <h4>Edit Employee</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input value="<%= result.full_name %>" name="full_name" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Age</label>
                        <input value="<%= result.age %>" type="text" name="age" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <br />
                        Male <input type="radio" <% if(result.gender=='male'){ %> checked <% } %> name="gender" value="male" />
                        Female <input type="radio" <% if(result.gender=='female'){ %> checked <% } %> name="gender" value="female" />
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <select class="form-control" name="city">
                            <option>Select</option>
                            <option <% if(result.city=='Indore'){ %> selected  <% } %> >Indore</option>
                            <option <% if(result.city=='Mumbai'){ %> selected  <% } %>>Mumbai</option>
                            <option <% if(result.city=='Pune'){ %> selected  <% } %>>Pune</option>
                            <option <% if(result.city=='Bhopal'){ %> selected  <% } %>>Bhopal</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input value="<%= result.salary %>" type="text" class="form-control" name="salary" />
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a href="/employee" class="btn btn-danger">Back</a>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>


