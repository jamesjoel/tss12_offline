<%- include('header') %>
<div class="container mt-4" style="min-height:600px">
    <div class="row my-3">
        <div class="col-md-12 bg-info">
            <h4 class="text-center">All Products</h4>
        </div>

    </div>

    <div class="row">
        
        <% product.forEach(function(x){ %>

        
        <div class="col-md-3 my-3">
            <div class="card">
                <img src="<%= x.image %>" style="height: 170px;" class="card-img-top" >
                <div class="card-body">
                    <p class="m-0 p-0 text-center"><b><%= x.title %></b></p>
                    <p class="m-0 p-0 text-center"><small>&pound; <%= x.price %></small></p>
                    
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-info btn-sm">Buy</a>
                </div>
            </div>
        </div>
        <% }) %>


    </div>


</div>
<%- include('footer') %>