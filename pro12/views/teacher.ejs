<%- include('header') %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add</button>
                <a href="/teacher/deleteall" class="btn btn-danger">Delete All</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <table class="table table-hover table-dark table-bordered table-striped">
                    <tr>
                        <th>S.No.</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Class</th>
                        <th>Salary</th>
                        <th>Delete</th>
                        <th>Edit</th>
                    </tr>
                    <% result.forEach(function(x, n){ %>
                        <tr>
                            <td><%= n+1 %></td>
                            <td><%= x.name %></td>
                            <td><%= x.age %></td>
                            <td><%= x.class %></td>
                            <td><%= x.salary %></td>
                            <td><a class="btn btn-danger btn-sm" href="/teacher/delete/<%= x._id %>">Delete</a></td>
                            <td><a class="btn btn-info btn-sm" href="/teacher/edit/<%= x._id %>">Edit</a></td>
                        </tr>
                    <% }) %>
                </table>
            </div>
        </div>
            
    </div>

    

    <div class="modal fade" id="addModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/teacher/add" method="post">
                <div class="modal-header">
                    <h3>Add Teacher</h3>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Age</label>
                        <input name="age" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Class</label>
                        <input type="text" name="class" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" name="salary" class="form-control" />
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Add" class="btn btn-success">
                    <input type="button" value="Close" class="btn btn-danger" data-dismiss="modal">
                </div>
            </form>
            </div>
        </div>
    </div>
    