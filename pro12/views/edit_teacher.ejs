<%- include('header') %>
    <div class="container mt-3">

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form action="/teacher/update/<%= result._id %>" method="post">
                <h3 class="text-center">Edit Teacher</h3>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" value="<%= result.name %>" name="name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Age</label>
                    <input name="age" value="<%= result.age %>" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Class</label>
                    <input type="text" value="<%= result.class %>" name="class" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Salary</label>
                    <input type="text" value="<%= result.salary %>" name="salary" class="form-control" />
                </div>
                <input type="submit" class="btn btn-success" value="Update" />
                <a href="/teacher" class="btn btn-danger">Back</a>
                </form>
            </div>
        </div>

    </div>





    